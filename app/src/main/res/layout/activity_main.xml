<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_linechagnecolor"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="10">

                <Button
                    android:id="@+id/customa"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="2"
                    android:background="@drawable/shape_linechagnecolor"
                    android:text="自定义属性"/>

                <Button
                    android:id="@+id/fontchange"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="2"
                    android:text="字体改变效果"/>

                <Button
                    android:id="@+id/marqueen"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_row="2"
                    android:text="跑马灯效果"/>

                <Button
                    android:id="@+id/androidh5"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:text="安卓返回H5上一页"/>

                <Button
                    android:id="@+id/transtoolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_gravity="left"
                    android:layout_marginTop="4dp"
                    android:layout_row="3"
                    android:text="透明标题栏"/>

                <Button
                    android:id="@+id/chageColor"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_row="3"
                    android:text="改变色值"/>
                <!--第四行-->

                <Button
                    android:id="@+id/pathuse"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="0"
                    android:layout_marginTop="4dp"
                    android:layout_row="4"
                    android:text="Path里的绘图函数"/>

                <Button
                    android:id="@+id/jinzhan"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_marginTop="4dp"
                    android:layout_row="4"
                    android:text="进栈出栈"/>

            </GridLayout>

            <Button
                android:id="@+id/customercontent"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="自定义组合控件"/>


            <Button
                android:id="@+id/radiochange"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="RadioButton换行效果"/>

            <Button
                android:id="@+id/mprogressbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="自定义进度条"/>

            <Button
                android:id="@+id/mrecyclerView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="RecyclerView的使用"/>

            <Button
                android:id="@+id/mzyt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="折线图"/>

            <Button
                android:id="@+id/yaoyiyao"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="摇一摇"/>

            <Button
                android:id="@+id/pinepic"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="饼状图"/>

            <Button
                android:id="@+id/btn_qqlist"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="qqListView"/>

            <Button
                android:id="@+id/btn_recylist"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="RecyclerView多级菜单"/>

            <Button
                android:id="@+id/btn_radio"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:text="radioTest两行两列效果"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
